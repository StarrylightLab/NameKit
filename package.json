{
  "name": "namekit-figma-plugin",
  "version": "1.2.0",
  "description": "A comprehensive Figma plugin for batch renaming.",
  "scripts": {
    "build": "npm run build:ui && npm run build:plugin",
    "build:ui": "vite build",
    "build:plugin": "esbuild plugin.ts --bundle --outfile=dist/plugin.js --target=es2017 --minify",
    "watch": "concurrently \"npm run watch:ui\" \"npm run watch:plugin\"",
    "watch:ui": "vite build --watch",
    "watch:plugin": "esbuild plugin.ts --bundle --outfile=dist/plugin.js --target=es2017 --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.84.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-singlefile": "^2.0.1"
  }
}